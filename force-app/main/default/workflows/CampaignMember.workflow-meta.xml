<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Email_DBS</fullName>
        <ccEmails>kaho-uemura@toyokeizai.co.jp</ccEmails>
        <description>DBS資料請求のキャンペーンにキャンペーンメンバーが追加されたときにメール送信</description>
        <protected>false</protected>
        <recipients>
            <recipient>product@toyokeizai.co.jp</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/EmailTemplate_DBS</template>
    </alerts>
    <rules>
        <fullName>DBS資料請求申込通知</fullName>
        <actions>
            <name>Email_DBS</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Campaign.Name</field>
            <operation>contains</operation>
            <value>DBS資料請求</value>
        </criteriaItems>
        <description>DBS資料請求に申し込みがあり、キャンペーンメンバーに追加されると通知する</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
