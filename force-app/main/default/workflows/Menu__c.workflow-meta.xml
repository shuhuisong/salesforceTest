						IF(custom_opportunity__r.agency_name__c == null,custom_opportunity__r.clent_name__r.BillingPostalCode + custom_opportunity__r.clent_name__r.BillingState + custom_opportunity__r.clent_name__r.BillingCity + custom_opportunity__r.clent_name__r.BillingStreet ,
