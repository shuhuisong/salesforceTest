<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>order_date_after_14</fullName>
        <description>14日後アラート</description>
        <protected>false</protected>
        <recipients>
            <type>owner</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>addmail/order_date_after_14</template>
    </alerts>
    <fieldUpdates>
        <fullName>RecordType_view</fullName>
        <field>RecordTypeId</field>
        <lookupValue>zassi_view</lookupValue>
        <lookupValueType>RecordType</lookupValueType>
        <name>レコードタイプを一覧に</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>LookupValue</operation>
        <protected>false</protected>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>TaxRateSet</fullName>
        <field>tax_rate__c</field>
        <formula>IF ( menu__r.kaigai_torihiki__c = True , 0 , VALUE ( $Label.tax_rate ) )</formula>
        <name>消費税率Set</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>check_90</fullName>
        <field>after_14__c</field>
        <literalValue>1</literalValue>
        <name>90日チェック</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>product_by_date_true</fullName>
        <field>product_by_date__c</field>
        <literalValue>1</literalValue>
        <name>納品チェック</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>true</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>seikyu_set</fullName>
        <field>invoice_arrival_date__c</field>
        <formula>TODAY()</formula>
        <name>請求書到着日セット</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>seisaku_invoice_true</fullName>
        <field>seisaku_invoice__c</field>
        <literalValue>1</literalValue>
        <name>請求書チェック</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>true</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>消費税率Set</fullName>
        <actions>
            <name>TaxRateSet</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>SeisakuSiharai__c.CreatedDate</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>納品日から14日経っても請求書納品日がnull</fullName>
        <active>true</active>
        <criteriaItems>
            <field>SeisakuSiharai__c.delivery_date__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>SeisakuSiharai__c.invoice_arrival_date__c</field>
            <operation>equals</operation>
        </criteriaItems>
        <criteriaItems>
            <field>SeisakuSiharai__c.after_14__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>order_date_after_14</name>
                <type>Alert</type>
            </actions>
            <actions>
                <name>check_90</name>
                <type>FieldUpdate</type>
            </actions>
            <offsetFromField>SeisakuSiharai__c.delivery_date__c</offsetFromField>
            <timeLength>1</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>納品日チェック</fullName>
        <actions>
            <name>product_by_date_true</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>SeisakuSiharai__c.delivery_date__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>請求書チェック日</fullName>
        <actions>
            <name>seikyu_set</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>SeisakuSiharai__c.seisaku_invoice__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>請求書到着日チェック</fullName>
        <actions>
            <name>seisaku_invoice_true</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <booleanFilter>1</booleanFilter>
        <criteriaItems>
            <field>SeisakuSiharai__c.invoice_arrival_date__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
